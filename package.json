{
  "name": "llmsmap-txt",
  "version": "0.1.0",
  "description": "Composable context for LLM-readable websites. Generate hierarchical content maps with selective retrieval.",
  "type": "module",
  "bin": {
    "llmsmap-txt": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./handler": {
      "import": "./dist/server/handler.js",
      "types": "./dist/server/handler.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llms-txt",
    "llm",
    "ai",
    "composable-context",
    "content-map",
    "crawl",
    "firecrawl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelTheMay/llmsmap-txt.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@mendable/firecrawl-js": "^1.15.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "gpt-tokenizer": "^2.5.0",
    "ora": "^8.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
